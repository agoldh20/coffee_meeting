<h1>Contact Show</h1>

<% if @contact.email %>
<h3>Name/Email: <a href="mailto:<%= @contact.email %>?Subject=Adam%20Goldwater,%20following%20up%20with%20you"><%= @contact.first_name.capitalize %> <%= @contact.last_name.capitalize %></a></h3>
<% else %>
  <h3>Name: <%= @contact.first_name.capitalize %> <%= @contact.last_name.capitalize %> (No Email)</h3>
<% end %>
<h3>Position: <%= @contact.position.titleize if @contact.position %></h3>
<h3>Company: <%= @contact.company.titleize %></h3>
<h3>Met Yet? <%= @contact.met %></h3>
<h3>Thanked Yet? <%= @contact.thank_you.capitalize if @contact.thank_you %></h3>
<h3>Followed Up Yet? <%= @contact.followed_up.capitalize if @contact.followed_up %></h3>
<% if @contact.notes %>
  <h3>Notes:</h3> 
  <% @contact.nice_notes.each do |note| %>
    <ul>
      <li><%= note %></li>
    </ul>
  <% end %>
<% end %>
<div>
  <%= link_to "Update", "/contacts/#{@contact.id}/edit"%>
</div>

<div>
  <%= link_to "Delete Contact", "/contacts/#{@contact.id}", method: :delete %>
</div>
